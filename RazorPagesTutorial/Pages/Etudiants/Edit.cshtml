@page "{id}"
@model RazorPagesTutorial.Pages.Etudiants.EditModel
@{
    ViewData["Title"] = "Edit";
    var photoPath = "/images/" + (Model.Etudiant.PhotoPath ?? "noImage.jpg");
}

<h1>Editer</h1>

<form method="post" class="mt-3">
    <div class="row">
        <div class="col-md-6">
            <input hidden asp-for="Etudiant.Id" />


            <div class="form-group row">
                <label asp-for="Etudiant.Nom" class="col-sm-2 col-form-label">
                </label>
                <div class="col-sm-10">
                    <input asp-for="Etudiant.Nom" class="form-control" placeholder="Nom">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Etudiant.Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Etudiant.Email" class="form-control" placeholder="Email">
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Etudiant.Departement " class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Etudiant.Departement" class="custom-select mr-sm-2"
                            asp-items="Html.GetEnumSelectList<Dept>()">
                        <option value="">Choix...</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                    <a asp-page="/Etudiants/Index" class="btn btn-primary">Annuler</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <img class="card-img-top imageThumbnail" src="@photoPath" alt="Card image cap" asp-append-version="true">
        </div>
    </div>
</form>