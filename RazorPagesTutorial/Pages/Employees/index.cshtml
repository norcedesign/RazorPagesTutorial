@page 
@model RazorPagesTutorial.Pages.Employees.indexModel
@{
    ViewData["Title"] = "index";
}

<style>
    .btn{
        width:75px;
    }
</style>

<h1>Employés</h1>


<div class="card-deck">
    @foreach (var emp in Model.Employees)
    {
        var photoPath = "/images/" + (emp.PhotoPath ?? "noImage.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width:30%">
            <div class="card-header">
                <h3>@emp.Name</h3> 
            </div>
            <div class="card-body text-center">
                <img class="card-img-top imageThumbnail" src="@photoPath" alt="Card image cap" asp-append-version="true">
              
            </div>
            <div class="card-footer text-center">
                <a asp-page="Details" asp-route-id="@emp.Id" class="btn btn-primary m-1">Voir</a>
                <a asp-page="Edit" asp-route-id="@emp.Id" class="btn btn-primary m-1">Editer</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
        
    }

</div>

